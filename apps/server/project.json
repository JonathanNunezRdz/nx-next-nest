{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/server/src",
	"projectType": "application",
	"targets": {
		"migrate-db": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx prisma migrate dev --schema=../../prisma/schema.prisma --name={args.name}",
				"cwd": "apps/server"
			}
		},
		"prisma-studio": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx prisma studio --schema=../../prisma/schema.prisma",
				"cwd": "apps/server"
			}
		},
		"remove-db": {
			"executor": "nx:run-commands",
			"options": {
				"command": "echo READY",
				"cwd": "apps/server"
			},
			"configurations": {
				"production": {
					"command": "echo READY"
				},
				"hard": {
					"command": "docker compose rm dev-db -s -f -v"
				}
			}
		},
		"start-db": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["docker compose up dev-db -d", "sleep 1"],
				"cwd": "apps/server",
				"parallel": false
			},
			"configurations": {
				"production": {
					"commands": ["echo READY"]
				}
			},
			"dependsOn": ["remove-db"]
		},
		"prepare-db": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"npx prisma migrate deploy --schema=../../prisma/schema.prisma"
				],
				"parallel": false,
				"cwd": "apps/server"
			},
			"configurations": {
				"production": {
					"commands": [
						"npx prisma migrate deploy --schema=../../prisma/schema.prisma"
					]
				},
				"hard": {
					"commands": [
						"npx prisma migrate deploy --schema=../../prisma/schema.prisma",
						"npx prisma db seed"
					]
				}
			},
			"dependsOn": ["start-db"]
		},
		"build": {
			"executor": "@nrwl/node:webpack",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/server",
				"main": "apps/server/src/main.ts",
				"tsConfig": "apps/server/tsconfig.json",
				"assets": ["apps/server/src/assets"]
			},
			"configurations": {
				"production": {
					"optimization": true,
					"extractLicenses": true,
					"inspect": false,
					"fileReplacements": [
						{
							"replace": "apps/server/src/environments/environment.ts",
							"with": "apps/server/src/environments/environment.prod.ts"
						}
					]
				}
			},
			"dependsOn": ["prepare-db"]
		},
		"serve": {
			"executor": "@nrwl/node:node",
			"options": {
				"buildTarget": "server:build"
			},
			"dependsOn": ["prepare-db"]
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["apps/server/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/apps/server"],
			"options": {
				"jestConfig": "apps/server/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": ["scope:server"]
}
