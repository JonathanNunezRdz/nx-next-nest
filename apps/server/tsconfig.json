{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"types": ["node"],
		"emitDecoratorMetadata": true,
		"target": "es2015",
		"incremental": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true
	},
	"exclude": [
		"jest.config.ts",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/*.e2e-spec.ts"
	],
	"include": ["**/*.ts"]
}
